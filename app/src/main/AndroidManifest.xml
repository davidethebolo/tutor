<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bolowrc.tutoringmanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/cat_math"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/home" />
        <activity
            android:name=".activity.LessonsActivity"
            android:label="@string/lessons">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bolowrc.tutoringmanager.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.StudentsActivity"
            android:label="@string/students">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bolowrc.tutoringmanager.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.StatisticsActivity"
            android:label="@string/statistics">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bolowrc.tutoringmanager.activity.MainActivity" />
        </activity>
        <activity android:name=".activity.StudentActivity" />
        <activity android:name=".activity.LessonActivity"></activity>
    </application>

</manifest>
